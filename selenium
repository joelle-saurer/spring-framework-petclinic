pipeline {
    
    agent any
 
    tools {
        maven "Maven"
    }

    stages {   
        stage('deploy') {
            steps {
              echo 'Deploying the to Nexus Repo'
              echo 'Application is running on tomcat server'
              sh 'mvn deploy -Dmaven.install.skip=true'
            }
        }

       
        stage('Selenium test') {
            steps {
              echo 'Testing the application'
              sh "javac '/var/lib/jenkins/workspace/SeleniumTest/src/test/java/org/springframework/samples/petclinic/AddOwnerTest.java'"
              sh "java '/var/lib/jenkins/workspace/SeleniumTest/src/test/java/org/springframework/samples/petclinic/AddOwnerTest.java'" 
            }
        }

    }
}