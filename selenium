pipeline {
    
    agent any
 
    tools {
        maven "Maven"
    }

    stages {   
        stage('deploy') {
            steps {
              echo 'Deploying the to Nexus Repo'
              echo 'Application is running on tomcat server'
              sh 'mvn deploy -Dmaven.install.skip=true'
            }
        }

       
        stage('Selenium test') {
            steps {
              echo 'Testing the application'
              sh 'cd /home/azureuser/petclinic/spring-framework-petclinic/'
              sh 'pytest -s -v --html=report.html test_petclinic.py'
            }
        }
    }
}

